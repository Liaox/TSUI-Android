<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/tsui_default_10">

    <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="xxxxxxx"/>

    <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tsui_default_10"
            tools:text="xxxxxxx"/>

    <TextView
            android:id="@+id/tv_convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tsui_default_10"
            tools:text="xxxxxxx"/>

    <TextView
            android:id="@+id/tv_status_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tsui_default_10"
            android:text="点击按钮 设置当前状态栏字体/黑色\n适配4.4以上版本MIUIV、Flyme和6.0以上版本其他Android"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
                android:id="@+id/btn_status_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="black"/>
        <Button
                android:id="@+id/btn_status_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="white"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tsui_default_10"
            android:text="调用系统安装了的应用分享"/>

    <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share"/>

</LinearLayout>