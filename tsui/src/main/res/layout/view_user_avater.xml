<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    >
    <!--点赞榜-->
    <com.zhiyicx.tsui.widget.imageview.TSFilterImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/tsui_default_30"
        android:layout_height="@dimen/tsui_default_30"
        app:pressShape="circle"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/iv_verify"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_alignRight="@id/iv_avatar"
        android:layout_alignEnd="@id/iv_avatar"
        android:layout_width="@dimen/tsui_default_10"
        android:layout_height="@dimen/tsui_default_10"/>

</RelativeLayout>