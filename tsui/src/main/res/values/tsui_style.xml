<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--######################### 分割线 ##########################-->
    <!-- 分隔线水平-->
    <style name="style_divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tsui_diver_0.5</item>
        <item name="android:background">@color/tsui_config_color_gray_8</item>
    </style>
    <!-- 分隔线水平 浅色-->
    <style name="style_divider_horizontal_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tsui_diver_0.5</item>
        <item name="android:background">@color/tsui_config_color_gray_9</item>
    </style>
    <!-- 分隔线垂直-->
    <style name="style_divider_veitical">
        <item name="android:layout_width">@dimen/tsui_diver_0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/tsui_config_color_gray_8</item>
    </style>
    <!-- 分隔线垂直 浅色-->
    <style name="style_divider_veitical_light">
        <item name="android:layout_width">@dimen/tsui_diver_0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/tsui_config_color_gray_9</item>
    </style>

    <!-- 输入框游标 -->
    <style name="style_edit_cursor">
        <item name="android:textColorHint">@color/tsui_general_for_hint</item>
        <!--<item name="android:textCursorDrawable">@drawable/shape_cursor_drawable</item>-->
    </style>

    <style name="style_edit" parent="style_edit_cursor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/tsui_default_10</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/tsui_text_size_14</item>
        <item name="android:textColor">@color/tsui_config_color_black</item>
        <item name="android:paddingRight">@dimen/tsui_default_15</item>
    </style>

    <style name="style_edit_bg_line" parent="style_edit_cursor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/tsui_text_size_14</item>
        <item name="android:textColor">@color/tsui_config_color_black</item>
        <item name="android:paddingRight">@dimen/tsui_default_8</item>
        <item name="android:paddingLeft">@dimen/tsui_default_8</item>
        <item name="android:drawableBottom">@drawable/selector_editext_bg_line</item>
        <item name="android:drawablePadding">@dimen/tsui_default_10</item>
        <item name="android:maxLines">@integer/max_lines</item>
    </style>
    <!-- 加载滚动条样式 -->
    <style name="style_loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/frame_loading_grey</item>
        <item name="android:indeterminateDuration">500</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
</resources>